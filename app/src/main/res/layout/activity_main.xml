<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/show_login_screen"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Login Flow" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/show_payment_pre_auth"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Store" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_refresh_token"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Refresh token" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_get_token"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Get Current token" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_validate_token_expired"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Validate token" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:id="@+id/view_pb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>